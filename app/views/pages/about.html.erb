<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>

    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile.jpg", width: 300, alt: "profile image", class: 'profile-img' %>
      </div>

      <div class="col-md-8">
        <p>I am a student.</p>

        <p>I made this whole application! It was very intersesting, and I had fun making it.</p>

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
            Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Living at home
            </div>
            <div class="card card-block">
              Coming soon
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card card-block">
              Vista Heights Middle School
            </div>
            <div class="card card-block">
              Frontier Middle School
            </div>
            <div class="card card-block">
              Westlake High School
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
